<Project>
    <PropertyGroup>
        <TargetGameName>Firestone</TargetGameName>
        <GameRoot Condition="'$(COMMON_DIR)' != ''">$(COMMON_DIR)\$(TargetGameName)</GameRoot>
        <GameRoot Condition="'$(GameRoot)' == ''">C:\Games\$(TargetGameName)</GameRoot>
    </PropertyGroup>

    <PropertyGroup>
        <MelonLoaderDir>$(GameRoot)\MelonLoader</MelonLoaderDir>
        <MelonLoaderNetDir>$(MelonLoaderDir)\net6</MelonLoaderNetDir>
        <Il2CppAssembliesDir>$(MelonLoaderDir)\Il2CppAssemblies</Il2CppAssembliesDir>
        <ModsDir>$(GameRoot)\Mods</ModsDir>
        <UserLibs>$(GameRoot)\UserLibs</UserLibs>
    </PropertyGroup>

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
    </PropertyGroup>
    
    <PropertyGroup>
        <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    </PropertyGroup>
</Project>